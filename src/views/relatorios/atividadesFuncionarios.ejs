<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Relatório de atividades</title>
</head>
<style>
  body{
    font-size: medium;
  }

  .session {
    page-break-inside: avoid;
  }

  table {
    width: 100%;
  }
  th, td {
    text-align: center;
    border: 1px solid black;
  }
</style>
<body class="m-5 text-sm" >
  <div class="justify-between" style="width: 100%; display: flex;">
    <span>Funcionário: <%= funcionario.nome %></span>
    <span>Atividades realizadas entre <%= dayjs(dtInicio).format('DD/MM/YYYY') %> e <%= dayjs(dtFim).format('DD/MM/YYYY') %></span>
  </div>
    <hr />

    <table class="table-fixed">
      <thead>
        <tr>
          <th style="width: 20%;">Data</th>
          <th>Atividade</th>
        </tr>
      </thead>
      <tbody>
    <% for (var i = 0; i < atividades.length; i++) { %>
      <tr >
        <td class="border py-2"><%= dayjs(atividades[i].dtAtividade).format('DD/MM/YYYY HH:mm') %></td>
        <td class="border p-2 text-left">
          <span>
          <% if ( atividades[i].tipo < 3 ){ %>
            Contato com <%= atividades[i].nome %>:
          <% } %>
          <%= atividades[i].detalhes %></span>
        </td>
      </tr>

    <%}; %>
  </tbody>

  </table>
</body>
</html>
